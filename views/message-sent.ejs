            <div class="col-xs-12 text-center">
                <span class="title">Sent a message</span>
            </div>
          <form class="mt-3">
              <div class="form-group">
                <input type="text" class="form-control" id="from" placeholder="Sender Title">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="to" placeholder="Destination Number">
              </div>
              <div class="form-group">
                  <textarea rows=10 type="textarea" class="form-control" id="contant" placeholder="Your text here"></textarea>
              </div>
              <div class="form-group">
                  <button type="submit" style="width:100%" class="btn btn-success">Send</button>
              </div>
         </form>
